@page "/privacy"
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div>
    <form>
        <p>
            <label>Search Name: <input type="text" asp-for="SearchString" id="searchField" /></label>
            <input type="submit" value="Search" />
        </p>
    </form>

    <h3>Search Results for @Model.SearchString</h3>
</div>

<div class="row mys-4 overflow-x-auto" id="table">
    <table class="table table-dark table-striped table-bordered caption-top min-w-full">
        <thead>
            <caption class="text-center"><u>Leads For @Model.SearchString</u></caption>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Lead Id</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Customer Type</th>
                <th scope="col">Lead Type</th> 
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
