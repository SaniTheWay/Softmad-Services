@page "/"
@using Softmad.LeadGeneration.Models
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="text-center">
            <h1 class="fw-bolder">Admin Dashboard</h1>
        </div>

        <div class="row justify-content-center my-4">
            <div class="col-md-6">
                <form method="post" asp-page-handler="DownloadReport">
                    <div class="mb-3">
                        <label for="fileSelection" class="form-label">Select File To Download:</label>
                        <select id="fileSelection" name="FileSelection" class="form-select" asp-for="FileSelection" asp-items="Html.GetEnumSelectList<ChartTypeEnum>()"></select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Download</button>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <component type="typeof(Charts)" render-mode="ServerPrerendered" />
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@{
    ViewData["Title"] = "Home page";
}
